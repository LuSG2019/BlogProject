@model List<BlogProject.Models.EF.Blog>
@{
    ViewBag.Title = "PendingPost";
}

<div class="container">
    <h1>Pending</h1>

    <div class="container" id="blogContainer">
        @using (Html.BeginForm())
        {
            foreach (var b in Model)
            {

                <h1>

                    @b.Title
                </h1>
                <br />
                <p>
                    @Html.Raw(b.BlogBody)
                </p>
                <hr />
                <br />
                <button type="submit" class="btn btn-primary">Approve</button>
            }
        }

    </div>
</div>